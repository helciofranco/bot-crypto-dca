{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [".env*"],
      "outputs": ["dist/**"]
    },
    "ts:check": {
      "dependsOn": ["^ts:check"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
